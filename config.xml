<?xml version='1.0' encoding='utf-8'?>
<widget id="nl.fietsenvoor.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>FietsenVoor LIVE</name>
    <description>
       Volg je helden van Fietsenvoor.nl op weg naar de top!
    </description>
    <author email="michiel@hamaka.nl" href="http://www.hamaka.nl">
       Hamaka Utrecht
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-navigation href="http://*/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="android">
        <icon src="www/img/fv-icons/fv-icon-36.png" density="ldpi" />
        <icon src="www/img/fv-icons/fv-icon-48.png" density="mdpi" />
        <icon src="www/img/fv-icons/fv-icon-72.png" density="hdpi" />
        <icon src="www/img/fv-icons/fv-icon-96.png" density="xhdpi" />
    </platform>
</widget>